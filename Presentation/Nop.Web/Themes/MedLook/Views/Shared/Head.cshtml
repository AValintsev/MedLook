@using Nop.Core
@using Nop.Core.Domain.Catalog
@using Nop.Services.Helpers
@using Nop.Web.Framework.UI

@inject CatalogSettings catalogSettings
@inject IThemeContext themeContext
@inject IUserAgentHelper userAgentHelper

@{
    Layout = "";
    var themeName = await themeContext.GetWorkingThemeNameAsync();
    var supportRtl = await Html.ShouldUseRtlThemeAsync();

    //add main CSS file
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/styles{(supportRtl ? ".rtl" : "")}.css");
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/menu.css");
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/hamburger.css");
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/print.css");
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/swiper.min.css");

    //add jQuery UI css file
    NopHtml.AppendCssFileParts("~/lib_npm/jquery-ui-dist/jquery-ui.min.css");

    NopHtml.AppendScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/swiper.min.js");
    NopHtml.AppendScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/js/collapsible-box.js");

}

