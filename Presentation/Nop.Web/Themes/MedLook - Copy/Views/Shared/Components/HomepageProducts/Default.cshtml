@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="home-page-product-grid">
        <div class="title">
            @T("Homepage.Products")
        </div>
        <div class="swiper">
            <div class="swiper-wrapper">
                @foreach (var item in Model)
                {
                    <div class="swiper-slide">
                        <div class="item-box item">
                            @await Html.PartialAsync("_ProductBox", item)
                        </div>
                    </div>
                }

            </div>
            <div class="swiper-scrollbar"></div>
        </div>
    </div>
    <script>
        const swiper = new Swiper('.swiper', {            
            scrollbar: {
                el: '.swiper-scrollbar',
                draggable: true,
            },
            slideToClickedSlide: false,
            breakpoints: {
                320: {
                    slidesPerView: 1,
                    spaceBetween: 20
                },
                480: {
                    slidesPerView: 2,
                    spaceBetween: 30
                },
                640: {
                    slidesPerView: 3,
                    spaceBetween: 20
                },
                768: {
                    slidesPerView: 4,
                    spaceBetween: 10
                },
                1024: {
                    slidesPerView: 4,
                    spaceBetween: 20
                },
                1280: {
                    slidesPerView: 4,
                    spaceBetween: 0
                },
                1440: {
                    slidesPerView: 4,
                    spaceBetween: 0
                }
            },
        });
    </script>
}