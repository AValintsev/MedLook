@using Nop.Web.Areas.Admin.Components
@using Nop.Ithoot.Plugin.Order.OneClick.Models
@model Nop.Ithoot.Plugin.Order.OneClick.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync(typeof(StoreScopeConfigurationViewComponent))
<form asp-controller="OrderOneClickAdmin" asp-action="Configure" method="post">
    <section class="content">
        <div class="container-fluid">
            <div class="cards-group">
                <div class="card card-default">
                    <div class="card-body">
                        <div class="form-group row">
                            @(await Html.LocalizedEditorAsync<ConfigurationModel, ConfigurationModel.OrderOneClickLocalizedModel>("order-one-click-localized",
                            @<div>
                                <div class="form-group row">
                                    <div class="col-md-3">
                                        <nop-label asp-for="@Model.Locales[item].ButtonName" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="@Model.Locales[item].ButtonName" />
                                        <span asp-validation-for="@Model.Locales[item].ButtonName"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3">
                                        <nop-label asp-for="@Model.Locales[item].SuccessNotifyMessage" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="@Model.Locales[item].SuccessNotifyMessage" />
                                        <span asp-validation-for="@Model.Locales[item].SuccessNotifyMessage"></span>
                                    </div>
                                </div>
                                <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
                            </div>
                                ,
                            @<div>
                                <div class="form-group row">
                                    <div class="col-md-3">
                                        <nop-label asp-for="ButtonName" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="ButtonName" asp-required="true" />
                                        <span asp-validation-for="ButtonName"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3">
                                        <nop-label asp-for="SuccessNotifyMessage" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="SuccessNotifyMessage" asp-required="true" />
                                        <span asp-validation-for="SuccessNotifyMessage"></span>
                                    </div>
                                </div>
                            </div>))
                        </div>
                                             
                        <div class="form-group row">
                            <div class="col-md-4">
                                <nop-label asp-for="NotificationEmails" />
                            </div>
                            <div class="col-md-8">
                                <nop-editor asp-for="NotificationEmails" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-9 offset-md-3">
                                <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>