@using Nop.Ithoot.Plugin.Widgets.CategorySlider.Models
@using Nop.Plugin.Widgets.CategorySlider
@using Nop.Web.Models.Catalog
@model PublicInfoModel
@if (Model.ProductsList.Count() > 0)
{
    <div class="home-page-product-grid products">
        <div class="swiper swiper-category-products">
            <a href="@Url.RouteUrl("Category", new { SeName = Model.CategorySeName })">
                <h2 class="title">
                    @T(CategorySliderPlugin.BlockNameKey)
                </h2>
            </a>
            <div class="swiper-buttons">
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </div>
            <div class="swiper-wrapper">
                @foreach (var item in Model.ProductsList)
                {
                    <div class="swiper-slide">
                        <div class="item-box item">
                            @await Html.PartialAsync("_ProductBoxSimple", item)
                        </div>
                    </div>
                }

            </div>
            <div class="swiper-scrollbar"></div>
        </div>
    </div>
    <script>
        new Swiper('.swiper-category-products', {
            scrollbar: {
                el: '.swiper-scrollbar',
                draggable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            slideToClickedSlide: false,
            breakpoints: {
                320: {
                    slidesPerView: 2,
                    spaceBetween: 10
                },
                480: {
                    slidesPerView: 3,
                    spaceBetween: 10
                },
                640: {
                    slidesPerView: 3,
                    spaceBetween: 20
                },
                768: {
                    slidesPerView: 4,
                    spaceBetween: 20
                },
                1024: {
                    slidesPerView: 5,
                    spaceBetween: 20
                },
                1280: {
                    slidesPerView: 6,
                    spaceBetween: 20
                },
                1440: {
                    slidesPerView: 7,
                    spaceBetween: 20
                }
            },
        });
    </script>
}